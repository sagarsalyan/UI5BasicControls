<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="BasicControls.BasicControls.controller.AvailableProduct" xmlns:dnd="sap.ui.core.dnd" xmlns:html="http://www.w3.org/1999/xhtml">
	<Table id="table" mode="SingleSelectMaster" growing="true" growingThreshold="10" beforeOpenContextMenu="onBeforeOpenContextMenu"
		items="{ path: '/product'}">
		<contextMenu>
			<Menu>
				<MenuItem text="Move to Selected Products" press="moveToSelectedProductsTable"/>
			</Menu>
		</contextMenu>
		<headerToolbar>
			<OverflowToolbar>
				<Title text="Available Products"/>
			</OverflowToolbar>
		</headerToolbar>
		<columns>
			<Column>
				<Text text="Product Name"/>
			</Column>
			<Column>
				<Text text="Category"/>
			</Column>
			<Column hAlign="End" width="6rem">
				<Text text="Quantity"/>
			</Column>
		</columns>
		<dragDropConfig>
			<dnd:DragInfo groupName="available2selected" sourceAggregation="items"/>
			<dnd:DropInfo groupName="selected2available" drop="onDropAvailableProductsTable"/>
		</dragDropConfig>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{productName}" wrapping="false"/>
					<Text text="{category}" wrapping="false"/>
					<Text text="{ path: 'quantity', type: 'sap.ui.model.type.Integer' }"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>