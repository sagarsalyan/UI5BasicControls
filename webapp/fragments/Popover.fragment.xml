<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		title="Popover"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
		placement="Bottom"
		initialFocus="email">
		<Label text="Popover demo"/>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					id="email"
					text="Email"
					press="handleEmailPress" />
			</OverflowToolbar>
		</footer>
	</Popover>
</core:FragmentDefinition>
